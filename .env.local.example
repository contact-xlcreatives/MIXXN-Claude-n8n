# n8n Configuration
N8N_WEBHOOK_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key-here
N8N_WEBHOOK_TEST_URL=http://localhost:5678/webhook-test

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=MIXXN Claude
NODE_ENV=development

# Error Handling Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000
REQUEST_TIMEOUT_MS=30000

# Feature Flags
ENABLE_AUTO_RETRY=true
ENABLE_ERROR_LOGGING=true
ENABLE_ANALYTICS=false

# Security Configuration
INTERNAL_API_KEY=your-internal-api-key-here
NEXT_PUBLIC_API_KEY=your-internal-api-key-here
# Generate a strong random key using: openssl rand -hex 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Note: NEXT_PUBLIC_API_KEY should match INTERNAL_API_KEY
